<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.yf.duitang.fragment.MsgFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rectangle">

        <TableRow
            style="@style/DefaultClick">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:background="@drawable/activity_icon_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="通知"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
        </TableRow>

        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            style="@style/DividerLine"/>

        <TableRow
            style="@style/DefaultClick">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:background="@drawable/activity_icon_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="赞/评论"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        </TableRow>

        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            style="@style/DividerLine"/>

        <TableRow
            style="@style/DefaultClick">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:background="@drawable/activity_icon_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="好友"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>
