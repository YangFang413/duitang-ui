<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_black</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorAccent">@color/light_grey</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarOverlayTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="ActionButtonOverflow" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/action_bar_icon_more</item>
    </style>
    
    <style name="DefaultClick">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/press_style</item>
    </style>
    
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="VerticalDividerLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
    </style>

</resources>
